    #}
}

# HTTPS server
#
server {
	listen 443;
	server_name tomcat.charles-sanquer.net;

    location / {
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Server $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_pass http://localhost:8080;
        proxy_redirect http://localhost:8080/ https://$host;
    }

	ssl on;
	ssl_certificate /etc/ssl/localcerts/tomcat.charles-sanquer.net.pem;
	ssl_certificate_key /etc/ssl/localcerts/tomcat.charles-sanquer.net.key;

	ssl_session_timeout 5m;

	ssl_protocols SSLv3 TLSv1;
	ssl_ciphers ALL:!ADH:!EXPORT56:RC4+RSA:+HIGH:+MEDIUM:+LOW:+SSLv3:+EXP;
	ssl_prefer_server_ciphers on;
    
}
