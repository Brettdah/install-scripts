server {
	listen 80 ;

	server_name tomcat.charles-sanquer.net;

    #rewrite ^ $scheme://tomcat.charles-sanquer.net$request_uri permanent;
    rewrite ^ https://tomcat.charles-sanquer.net$request_uri permanent;
    
    #location / {
    #    proxy_set_header X-Forwarded-Host $host;
    #    proxy_set_header X-Forwarded-Server $host;
    #    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    #    proxy_pass http://localhost:8080;
