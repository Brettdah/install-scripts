<VirtualHost *:80>
  ServerName %host%.local
  DocumentRoot "/home/charles/www/%dir%/web"
  DirectoryIndex index.php 
  
  ErrorLog  /home/charles/www/log/%dir%.error.apache.log
  CustomLog /home/charles/www/log/%dir%.custom.apache.log combined

  Alias /fcgi-bin/ /home/www-data/charles/fcgi-bin/
  SuexecUserGroup charles charles

  <Directory "/home/charles/www/%dir%/web">
    AllowOverride All
    Order allow,deny
    Allow from All
  </Directory>
  
